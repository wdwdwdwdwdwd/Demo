<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/Login_LinearLayout_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="返回"
            android:textSize="17sp"
            android:layout_weight="7.80" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Login_LinearLayout_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/Login_LinearLayout_Back"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/login"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名密码登录"
        android:textSize="17sp"
        android:layout_alignBottom="@+id/Login_LinearLayout_login"
        android:layout_toEndOf="@+id/Login_LinearLayout_login" />
    <LinearLayout
        android:id="@+id/Login_LinearLayout_Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        >
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shape_login_linear"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名："
                android:textSize="16sp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/et_username"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:hint="填写用户名"
            android:textCursorDrawable="@null"
            android:inputType="number"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_register_et"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        >
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shape_login_linear"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textSize="16sp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/et_password"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:hint="输入密码"
            android:textCursorDrawable="@null"
            android:inputType="number"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_register_et"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/Login_TextView_Send"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="登陆"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:background="#FAE"
        android:layout_alignParentBottom="true"
        android:gravity="center"

        />
</RelativeLayout>